<%- include ('./partials/head.ejs') %>

<body>
    <%- include ('./partials/nav.ejs') %>
    <section class="addSeite">
        <h1>ADD A NEW PRODUCT</h1>
        <div class="container">
            <form action="/add" method="POST">
                <input type="text" name="product_name" placeholder="Product-name">
                <input type="text" name="picture_Link" placeholder="Url Picture">
                <input type="text" name="company" placeholder="Company">
                <input type="text" name="price" placeholder="Price">
                <textarea name="description" id="" cols="30" rows="10"
                    placeholder="Write your article here ..."></textarea>
                <input type="submit" value="ADD PRODUCT">
            </form>
        </div>
    </section>
<!--test -->
    <section>
        <div class="line"></div>
<!--         <div class="augen"><img src="/Group.svg" alt=""></div>
 -->    </section>

    <section class="index">
        <% Designs.forEach(e => { %>
        <article class="article2">
            <a href="/details/<%= e._id %>"><img src="<%= e.picture_Link %> " alt=""></a>

            <div class="divs">
                <h2><%= e.product_name %> </h2>
                <h2><%= e.price %> </h2>
            </div>
            <p><%= e.company %> </p>
        </article>
        <% }) %>

    </section>
    <h2>THE DESIGN SHOP</h2>
</body>

</html>